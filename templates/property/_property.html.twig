<div class="card mb-4">
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="Image à la une" class="card-img-top">
    {% else %}
        <img src="{{ '/images/properties/05.jpg' | imagine_filter('thumb') }}" alt="Image à la une" class="card-img-top">        
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show',{id: property.id, slug: property.slug}) }}">{{ property.title }}</a>
        </h5>
        <p class="card-text">{{ property.city }} ({{ property.postalCode }})</p>
        <div class="text-primary" style="font-weight: bold; font-size: 1.8rem;">{{ property.formattedprice }} €</div>
    </div>
</div>